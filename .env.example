# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3002

# Security Configuration
WHITELIST_IPs='["http://localhost:3000"]'
VALID_API_KEYS="your-api-key"
API_KEY="your-api-key"

# JWT Configuration
JWT_SECRET="your-jwt-secret"
JWT_REFRESH_SECRET="your-jwt-refresh-secret"

# Database Configuration
DB_HOST="your-database-host"
DB_PORT=3306
DB_USER="your-database-username"
DB_PASSWORD="your-database-password"
DB_NAME="your-database-name"

# Production Database Configuration (optional)
# DB_HOST_PROD="your-production-host"
# DB_USER_PROD="your-production-username"
# DB_PASSWORD_PROD="your-production-password"
# DB_NAME_PROD="your-production-database"

# Third-party Services
RECAPTCHA_SECRET_KEY="your-recaptcha-secret-key"
GOOGLE_CLIENT_ID="your-google-client-id"
FB_APP_ID=your-facebook-app-id

# Other
YANDEX_VERIFICATION=your-yandex-verification-code